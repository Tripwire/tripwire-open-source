-L \fIlocalkey\fP	--local-keyfile \fIlocalkey\fP
-S \fIsitekey\fP	--site-keyfile \fIsitekey\fP
-P \fIpassphrase\fP	--local-passphrase \fIpassphrase\fP
-Q \fIpassphrase\fP	--site-passphrase \fIpassphrase\fP
